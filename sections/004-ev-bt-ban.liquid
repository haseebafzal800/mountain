<div class="main-banner black-layer black-layer2 position-relative mountain-banner"
    style="background-image: url('{{ section.settings.img1 | img_url: 'master' }}');">
    <div class="vessel">
        <div class="content-banner text-align-center">
            <h2 class="text-light">
                {{ section.settings.title }}
            </h2>
            <p class="text-light">{{ section.settings.desc }}</p>
            {% if section.settings.btn_txt != '' %}
            <a href="{{ section.settings._btn_url }}" class="btn btn-primary neufreit">
                {{ section.settings.btn_txt}}
            </a>
            {% endif %}
        </div>
    </div>
</div>
{% schema %}
{
"name": "004-ev-bt-ban",
"class": "ind-o2",
"settings": [
{
"type": "textarea",
"id": "title",
"label": "title",
"default": "Interested In A Retail Partnership?"
},
{
"type": "textarea",
"id": "desc",
"label": "description",
"default": "Help us spread the soap! "
},
{
"type": "image_picker",
"id": "img1",
"label": "IMAGE1"
},
{
"type": "textarea",
"id": "btn_txt",
"label": "btn_txt"
},
{
"type": "url",
"id": "btn_url",
"label": "btn_url"
}
],
"blocks": [
],
"presets": [
{
"name": "004-ev-bt-ban",
"category": "custom"
}
]
}
{% endschema %}