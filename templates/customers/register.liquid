<div class="main-banner em-connected em-login-wrapper black-layer green-layer position-relative mountain-banner" style="background-image: url('https://cdn.shopify.com/s/files/1/2458/1997/files/Group_2822-min.png?v=1659722294');">
            <div class="vessel">
                <div class="queue">
                    <div class="column-12">
                       <div class="full-wrapper">
                            <div class="left-wrapper margin-bottom em-ll">
                                <div class="em-ll-00">
                                    <div class="ee-container margin-bottom">
                                        <h2>Already A Member?</h2>
                                        <strong class="text-yellow text-uppercase neufreit">Sign in with your account login below.</strong>
                                    </div>
                                    {% form 'customer_login' %}
                                        {{ form.errors | default_errors }}
                                        <input type="text" placeholder="Username" name="customer[email]" id="CustomerEmail" class="{% if form.errors contains 'email' %} input--error{% endif %}" autocorrect="off" autocapitalize="off" autofocus>
                                        <input type="password" placeholder="Password" value="" name="customer[password]" id="CustomerPassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">
                                        <button type="submit" class="btn btn-primary">login</button>
                                     {% endform %}
                                </div>    
                            </div>
                            <div class="right-wrapper em-ll">
                                <div class="em-ll-00"> 
                                    <div class="ee-container margin-bottom">
                                        <h2>Looking To Join The Adventure Soap Club?</h2>
                                        <strong class="text-yellow text-uppercase neufreit">Sign up with your personal details below to register for an account.</strong>
                                    </div>
                                    {% form 'create_customer' %}
                                        {{ form.errors | default_errors }}
                                        <div class="rp-container">
                                            <input type="text" placeholder="First Name" name="customer[first_name]" id="FirstName" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autofocus >
                                            <input type="text" placeholder="Last Name" name="customer[last_name]" id="LastName" {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
                                            <input class="em-email" type="email" placeholder="Email Address" name="customer[email]" id="Email" class="{% if form.errors contains 'email' %} input--error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">
                                           
                                        </div> 
                                        
                                        <div class="rb-container">
                                            <input id="pass-em"  type="password" placeholder="Password" name="customer[password]" id="CreatePassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">
                                            <label class="text-yellow neufreit text-uppercase margin-bottom" for="pass-em">
                                                * must include 1 uppercase letter <br>
                                                * must include letters &amp; numbers <br>
                                                * must be at least 8 characters in length
                                            </label>
                                            <button type="submit" class="btn btn-primary">register</button>
                                        </div>
                                    {% endform %}
                                </div>    
                            </div>
                       </div>
                    </div>
                </div>
            </div>
        </div>