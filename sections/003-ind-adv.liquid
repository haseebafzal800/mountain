<div class="adventure-club custom-space">
    <div class="vessel">
        <div class="adv-vessel">
            <h2 class="text-align-center">{{ section.settings.title }}</h2>
            <p class="text-align-center">{{ section.settings.desc }}</p>
            <div class="queue">
                <div class="column-12 column-md-5">
                    <div class="img-wrap"><img src="{{ section.settings.img1 | img_url: 'master' }}" alt="images"></div>
                </div>
                <div class="column-12 column-md-7 ">
                    <ul class="adv-list height-100 d-flex flex-columns">
                        {% for block in section.blocks %}
                        <li class="d-flex flex-columns f-grow-1 justify-content-center">
                            <strong
                                class="headline ethos-h d-block text-green text-capitalize margin-bottom position-relative">
                                {{ block.settings.title }}
                            </strong>
                            <p>{{ block.settings.desc }}</p>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% if section.settings.btn_txt != '' %}
            <a href="{{ section.settings.btn_url }}" class="btn btn-seceondry text-light neufreit">{{
                section.settings.btn_txt }}</a>
            {% endif %}
        </div>
    </div>
</div>
{% schema %}
{
"name": "003-ind-adv",
"class": "ind-05",
"settings": [
{
"type": "textarea",
"id": "title",
"label": "title",
"default": "The Adventure Soap Club"
},
{
"type": "textarea",
"id": "desc",
"label": "desc",
"default": "Life moves quickly and we value time above all else. The Adventure Soap Club is a soap subscription service"
},
{
"type": "image_picker",
"id": "img1",
"label": "img1"
},
{
"type": "textarea",
"id": "btn_txt",
"label": "btn_txt",
"default": "begin to adventure"
},
{
"type": "url",
"id": "btn_url",
"label": "btn_url"
}
],
"blocks": [
{
"type": "card",
"name":"card",
"settings": [
{
"type": "textarea",
"id": "title",
"label": "title",
"default": "Mix & Match Your Natural Soap"
},
{
"type": "textarea",
"id": "desc",
"label": "desc",
"default": "dessssscc"
}
]
}
],
"presets": [
{
"name": "003-ind-adv",
"category": "custom"
}
]
}
{% endschema %}