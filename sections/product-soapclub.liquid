                <script>
                    function getSubscriptionProperties() {

                        function getSoapsArray() {
                            var soaps = [];
                            $('input[data-field="soaps"]:checked').each(function(index, field) {
                                soaps.push($(field).data('label'));
                            });
                            return soaps;
                        }

                        function getPropertyValue(propertyName) {
                            return $('[name="properties[' + propertyName + ']"]').val();
                        }

                       
                        
                        var props = {
                            subscription_id: getPropertyValue('subscription_id'),
                            shipping_interval_unit_type: getPropertyValue('shipping_interval_unit_type'),
                            shipping_interval_frequency: $('#shipping_interval_frequency').val(),
                            charge_interval_frequency: $('#shipping_interval_frequency').val(),
                            soaps: getSoapsArray(),
                        };

                        return props;
                    }



                    function addSoapBoxToCart() {
                        var variantId = $('#product-select').val(),
                            properties = getSubscriptionProperties(),
                            params = {
                                id: variantId,
                                quantity: 1,
                                properties: properties
                            };

                        $.ajax({
                            type: 'POST',
                            url: '/cart/add.js',
                            dataType: 'json',
                            data: params,
                            success: function() {
                                window.location.href = '/cart';
                            },
                            error: function() {
                                console.log('error');
                            }
                        });
                    }
